            <class name="com.biit.infographic.core.pdf.PdfFromSVGTest"/>
            <class name="com.biit.infographic.core.pdf.PdfFromPngTest"/>
            <class name="com.biit.infographic.core.svg.ClipSvgGenerationTest"/>
            <class name="com.biit.infographic.core.svg.HappinessAtWorkTest"/>
            <class name="com.biit.infographic.core.svg.The5FrustrationsOnTeamworkingTest"/>
            <class name="com.biit.infographic.core.svg.KnowledgeSystemTest"/>
